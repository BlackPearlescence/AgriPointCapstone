// Schema for testing TestimonialCard
datasource db {
    provider = "mongodb"
    url = env("MONGO_CONNECTION_STRING")
}

generator client {
    provider = "prisma-client-js"
}

model Customer {
    id    String @id @default(auto()) @map("_id") @db.ObjectId
    first_name    String
    last_name       String
    profile_picture String
    email   String      @unique
    testimonial Testimonial?
}

model Testimonial {
    id      String      @id @default(auto()) @map("_id") @db.ObjectId
    review  String
    rating  Float
    customer Customer? @relation(fields: [customerId], references: [id])
    customerId String? @unique @db.ObjectId
}